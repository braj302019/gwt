<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.scroll-container {
		border: 1px solid #c2c2c2;
		height: 400px;
	}
	</ui:style>
	<g:FlowPanel>
		<g:FlowPanel>
			<g:Button styleName="{style.important}" ui:field="count" text="Count" />
			<g:Button styleName="{style.important}" ui:field="list" text="List" />
			<g:Button styleName="{style.important}" ui:field="persist" text="Perisit" />
			<g:FlowPanel>
				<g:TextBox ui:field="input"></g:TextBox>
				<g:Button styleName="{style.important}" ui:field="fetch" text="Fetch" />
				<g:Button styleName="{style.important}" ui:field="delete" text="Delete" />
			</g:FlowPanel>
		</g:FlowPanel>
		<g:FlowPanel>
			<g:ScrollPanel styleName="{style.scroll-container}">
				<g:HTML ui:field="logging"></g:HTML>
			</g:ScrollPanel>
		</g:FlowPanel>
		<g:Button ui:field="clean">Clean</g:Button>
	</g:FlowPanel>
</ui:UiBinder> 