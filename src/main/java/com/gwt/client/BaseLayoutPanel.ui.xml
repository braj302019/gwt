<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.root-container {
		height: 100%;
	}
	.container{
		width: 100%;
		height: 100%;
	}
	.inner-container {
		margin: 1em;
		height: 100%;
	}
	.header {
		border-bottom: 1px solid black;
	}
	.nav {
		border-right: 1px solid black;
		padding: 1em;
		background-color: #c2c2c2;
		height: 100%;
	}
	</ui:style>
	
	<g:DockLayoutPanel unit="EM" styleName="{style.root-container}">
		<g:north size="10">
			<g:HTML styleName="{style.header}">
				<header>
					<h1>GWT in Action!</h1>
				</header>
			</g:HTML>
		</g:north>
		<g:west size="16">
			<g:HTML styleName="{style.nav}">
				<nav>
					<ul>
						<li><a href="#tabs">Tabs</a></li>
						<li><a href="#client-bundle">Client Bundle</a></li>
						<li><a href="#secret-data">Secret data</a></li>
						<li><a href="#ui-binder">UIBinder</a></li>
						<li><a href="#event-bus">Event Bus</a></li>
						<li><a href="#request-factory">Request Factory</a></li>
						<li><a href="#cells">Cell Tutorial</a></li>
					</ul>
				</nav>
			</g:HTML>
		</g:west>
		<g:center>
			<g:VerticalPanel styleName="{style.container}">
				<g:SimpleLayoutPanel ui:field="container" styleName="{style.inner-container}"></g:SimpleLayoutPanel>
			</g:VerticalPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 